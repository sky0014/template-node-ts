{
  "compilerOptions": {    
    "outDir": "./dist",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
